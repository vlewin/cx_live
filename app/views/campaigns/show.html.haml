%p#notice= notice

%p
  %b Compaign:
  = @campaign.name

- if @images
  .row
    .col-md-6
      %b Images
      .row
        - @images.each do |image|
          .col-xs-6.col-md-3
            = image_tag image.url
            %b
              = "User gender: #{image.tags.find{|t| t.name == 'user_gender'}.try(:value)}"
              = "Category: #{image.tags.find{|t| t.name == 'category'}.try(:value)}"


    .col-md-6
      = form_tag search_campaign_path(@campaign) do
        %p
          = label_tag :category
          = select_tag :name, options_for_select(Tag.pluck(:name), :category)
          = text_field_tag :value, 'Store'

        %p
          = label_tag :user_gender
          = select_tag :name, options_for_select(Tag.pluck(:name), :user_gender)
          = text_field_tag :value

        %p
          = label_tag :user_device_os
          = select_tag :name, options_for_select(Tag.pluck(:name), :user_device_os)
          = text_field_tag :value

        = submit_tag 'Search', class: 'btn btn-success'

- else
  %h4 No image found!

= link_to 'Edit', edit_campaign_path(@campaign)
\|
= link_to 'Back', campaigns_path
